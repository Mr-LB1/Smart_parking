<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#BFEFFF"
    tools:context=".Update_UserCarNum"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        >
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:gravity="center"
            android:text="实名认证"
            android:textSize="35sp"
            android:textColor="#bbbb00"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_weight="2"
        >
        <TextView
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:text="姓名"
            android:textSize="25sp"
            android:background="@drawable/textview_background"
            android:textColor="#ffffff"
            android:layout_gravity="center"
            android:gravity="center"
            android:layout_marginLeft="30dp"
            />
        <EditText
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:textSize="25sp"
            android:background="@drawable/edit_background"
            android:textColor="#000"
            android:layout_gravity="center"
            android:id="@+id/user_realname"
            android:layout_marginLeft="30dp" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_weight="2"
        >
        <TextView
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:text="身份证"
            android:textSize="25sp"
            android:background="@drawable/textview_background"
            android:textColor="#ffffff"
            android:layout_gravity="center"
            android:gravity="center"
            android:layout_marginLeft="30dp"
            />
        <EditText
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:textSize="25sp"
            android:background="@drawable/edit_background"
            android:inputType="textPassword"
            android:textColor="#000"
            android:layout_gravity="center"
            android:id="@+id/user_safecardnum"
            android:layout_marginLeft="30dp" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_weight="4"
        >

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:text="确认"
            android:textSize="25dp"
            android:layout_weight="1"
            android:id="@+id/btn_update_safecardnum"
            android:background="#0000ff"
            android:layout_marginBottom="20dp"
            android:layout_marginStart="40dp"
            android:layout_marginLeft="40dp"
            android:layout_marginEnd="20dp"
            android:layout_marginRight="30dp" />
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:text="返回"
            android:textSize="25dp"
            android:layout_weight="1"
            android:id="@+id/btn_back_main"
            android:background="#0000ff"
            android:layout_marginBottom="20dp"
            android:layout_marginEnd="40dp"
            android:layout_marginRight="40dp" />

    </LinearLayout>
</LinearLayout>